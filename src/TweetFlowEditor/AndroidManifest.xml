            <intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="T4JOAuth" android:host="main" />
			</intent-filter>
        </activity>
        
        <activity android:name=".activities.Editor" android:label="@string/app_name"></activity>        
        <activity android:name=".activities.Tweeter" android:label="@string/app_name"></activity>
